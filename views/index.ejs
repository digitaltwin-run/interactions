<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Digital Twin Interactions IDE</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <button class="mobile-menu-btn" id="toggleLeftPanel">
      <i class="fas fa-bars"></i>
    </button>
    <div class="header-title">Digital Twin Interactions IDE</div>
    <button class="mobile-menu-btn" id="toggleRightPanel">
      <i class="fas fa-sliders-h"></i>
    </button>
  </header>
  
  <div class="panel-overlay" id="panelOverlay"></div>
  
  <div class="container">
    <!-- Left panel (Resources) -->
    <div class="left-panel" id="leftPanel">
      <div class="search-container">
        <i class="fas fa-search search-icon"></i>
        <input type="text" class="search-input" id="resourceSearch" placeholder="Search resources...">
      </div>
      
      <div class="section">
        <h3>SVG Resources</h3>
        <div class="drop-area" id="svgDropArea">
          <p class="drop-message">Drop SVG files here or</p>
          <form id="uploadSvgForm" class="upload-form" enctype="multipart/form-data">
            <div class="file-input-container">
              <input type="file" name="file" id="svgFileInput" accept=".svg" class="file-input">
            </div>
            <button type="submit" class="upload-btn">Upload SVG</button>
          </form>
        </div>
        
        <ul class="resource-list" id="svgList">
          <% if (svgFiles && svgFiles.length > 0) { %>
            <% svgFiles.forEach(file => { %>
              <li class="resource-item">
                <span class="resource-name"><%= file %></span>
                <div class="resource-actions">
                  <button class="action-btn" data-action="view" data-file="<%= file %>"><i class="fas fa-eye"></i></button>
                  <button class="action-btn" data-action="delete" data-file="<%= file %>"><i class="fas fa-trash-alt"></i></button>
                </div>
              </li>
            <% }); %>
          <% } else { %>
            <li>No SVG files uploaded yet</li>
          <% } %>
        </ul>
      </div>
      
      <div class="section">
        <h3>JavaScript Resources</h3>
        <div class="drop-area" id="jsDropArea">
          <p class="drop-message">Drop JS files here or</p>
          <form id="uploadJsForm" class="upload-form" enctype="multipart/form-data">
            <div class="file-input-container">
              <input type="file" name="file" id="jsFileInput" accept=".js" class="file-input">
            </div>
            <button type="submit" class="upload-btn">Upload Script</button>
          </form>
        </div>
        
        <ul class="resource-list" id="jsList">
          <% if (jsFiles && jsFiles.length > 0) { %>
            <% jsFiles.forEach(file => { %>
              <li class="resource-item">
                <span class="resource-name"><%= file %></span>
                <div class="resource-actions">
                  <button class="action-btn" data-action="view" data-file="<%= file %>"><i class="fas fa-eye"></i></button>
                  <button class="action-btn" data-action="delete" data-file="<%= file %>"><i class="fas fa-trash-alt"></i></button>
                </div>
              </li>
            <% }); %>
          <% } else { %>
            <li>No JavaScript files uploaded yet</li>
          <% } %>
        </ul>
      </div>
      
      <!-- Examples Section -->
      <div class="section">
        <h3>Examples</h3>
        
        <% if ((exampleSvgFiles && exampleSvgFiles.length > 0) || (exampleJsFiles && exampleJsFiles.length > 0) || (exampleHtmlFiles && exampleHtmlFiles.length > 0)) { %>
          <div class="example-resources">
            <% if (exampleSvgFiles && exampleSvgFiles.length > 0) { %>
              <h4>Example SVGs</h4>
              <ul class="resource-list">
                <% exampleSvgFiles.forEach(file => { %>
                  <li class="resource-item">
                    <span class="resource-name"><%= file %></span>
                    <div class="resource-actions">
                      <button class="action-btn" data-action="copy-example" data-type="svg" data-file="<%= file %>"><i class="fas fa-copy"></i></button>
                      <button class="action-btn" data-action="view-example" data-type="svg" data-file="<%= file %>"><i class="fas fa-eye"></i></button>
                    </div>
                  </li>
                <% }); %>
              </ul>
            <% } %>
            
            <% if (exampleJsFiles && exampleJsFiles.length > 0) { %>
              <h4>Example Scripts</h4>
              <ul class="resource-list">
                <% exampleJsFiles.forEach(file => { %>
                  <li class="resource-item">
                    <span class="resource-name"><%= file %></span>
                    <div class="resource-actions">
                      <button class="action-btn" data-action="copy-example" data-type="js" data-file="<%= file %>"><i class="fas fa-copy"></i></button>
                      <button class="action-btn" data-action="view-example" data-type="js" data-file="<%= file %>"><i class="fas fa-eye"></i></button>
                    </div>
                  </li>
                <% }); %>
              </ul>
            <% } %>
            
            <% if (exampleHtmlFiles && exampleHtmlFiles.length > 0) { %>
              <h4>Example HTMLs</h4>
              <ul class="resource-list">
                <% exampleHtmlFiles.forEach(file => { %>
                  <li class="resource-item">
                    <span class="resource-name"><%= file %></span>
                    <div class="resource-actions">
                      <button class="action-btn" data-action="view-example" data-type="html" data-file="<%= file %>"><i class="fas fa-eye"></i></button>
                      <button class="action-btn" data-action="open-example" data-type="html" data-file="<%= file %>"><i class="fas fa-external-link-alt"></i></button>
                    </div>
                  </li>
                <% }); %>
              </ul>
            <% } %>
          </div>
        <% } else { %>
          <p>No example files available</p>
        <% } %>
      </div>
      
      <div class="generate-container">
        <input type="text" id="projectTitle" placeholder="Project Title" class="property-input">
        <button id="generateBtn" class="generate-btn">Generate Interactive HTML</button>
      </div>
    </div>
    
    <!-- Center panel -->
    <div class="center-panel">
      <div class="tab-navigation">
        <button class="tab-btn active" data-tab="preview">Preview</button>
        <button class="tab-btn" data-tab="code">Code</button>
      </div>
      
      <div class="center-tab active" id="previewTab">
        <div id="canvasContainer" class="canvas-container">
          <div class="empty-state" id="emptyState">
            <i class="fas fa-layer-group fa-3x"></i>
            <p>Select an SVG from the resources panel</p>
          </div>
        </div>
      </div>
      
      <div class="center-tab" id="codeTab">
        <div class="editor-container">
          <div class="editor-header">
            <select id="fileSelector" class="property-input">
              <option value="">Select a file to edit</option>
            </select>
            <button id="saveCodeBtn" class="editor-save-btn">Save</button>
          </div>
          <textarea id="codeEditor" class="editor-textarea" placeholder="Select a file to edit"></textarea>
        </div>
      </div>
    </div>
    
    <!-- Right panel (Properties) -->
    <div class="right-panel" id="rightPanel">
      <div class="properties-container">
        <h3 class="properties-title">Properties</h3>
        
        <div id="noSelectionMessage">Select an SVG element to edit its properties</div>
        
        <div id="elementProperties" style="display: none;">
          <div class="property-group">
            <h4>Element Information</h4>
            <label class="property-label">Element ID</label>
            <input type="text" id="elementId" class="property-input" readonly>
          </div>
          
          <div class="property-group">
            <h4>Metadata</h4>
            <div class="metadata-tabs">
              <div class="metadata-tab active" data-editor="simple">Simple</div>
              <div class="metadata-tab" data-editor="json">JSON</div>
            </div>
            
            <div class="metadata-editors">
              <div class="metadata-editor active" id="simpleMetadataEditor">
                <div id="metadataFields"></div>
                <button id="addMetadataField" class="add-field-btn">Add Field</button>
              </div>
              
              <div class="metadata-editor" id="jsonMetadataEditor">
                <textarea id="jsonMetadataTextarea" class="json-editor" placeholder="Enter JSON metadata"></textarea>
                <div id="jsonError" class="error-message"></div>
                <div class="json-actions">
                  <button id="formatJsonBtn" class="json-btn json-btn-secondary">Format</button>
                  <button id="validateJsonBtn" class="json-btn json-btn-secondary">Validate</button>
                  <button id="applyJsonBtn" class="json-btn json-btn-primary">Apply</button>
                </div>
              </div>
            </div>
          </div>
          
          <div class="property-group">
            <h4>Script Binding</h4>
            <label class="property-label">Bind to JavaScript file</label>
            <select id="scriptSelector" class="property-input">
              <option value="">None</option>
            </select>
            <button id="bindScriptBtn" class="add-field-btn">Apply Binding</button>
          </div>
        </div>
        
        <div id="selectedResources">
          <div class="property-group">
            <h4>Selected SVGs</h4>
            <ul id="selectedSvgFiles" class="resource-list"></ul>
          </div>
          
          <div class="property-group">
            <h4>Selected Scripts</h4>
            <ul id="selectedJsFiles" class="resource-list"></ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom toolbar for mobile -->
  <div class="bottom-toolbar">
    <a href="#" class="toolbar-btn active" data-panel="center">
      <i class="fas fa-eye"></i>
      <span>Preview</span>
    </a>
    <a href="#" class="toolbar-btn" data-panel="left">
      <i class="fas fa-folder"></i>
      <span>Resources</span>
    </a>
    <a href="#" class="toolbar-btn" data-panel="code">
      <i class="fas fa-code"></i>
      <span>Code</span>
    </a>
    <a href="#" class="toolbar-btn" data-panel="right">
      <i class="fas fa-sliders-h"></i>
      <span>Properties</span>
    </a>
  </div>
  
  <!-- Result modal -->
  <div id="resultModal" class="modal">
    <div class="modal-content">
      <span class="close-modal">&times;</span>
      <h2>Interactive HTML Generated</h2>
      <div id="resultPreview"></div>
      <div class="result-actions">
        <button id="downloadBtn" class="result-btn result-btn-primary">Download HTML</button>
        <button id="copyBtn" class="result-btn result-btn-primary">Copy to Clipboard</button>
        <button id="viewInBrowserBtn" class="result-btn result-btn-primary">View in Browser</button>
      </div>
    </div>
  </div>
  
  <!-- Notification container -->
  <div id="notificationContainer" class="notification-container"></div>
  
  <script src="/js/app.js"></script>
</body>
</html>
