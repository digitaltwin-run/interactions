<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Digital Twin Interactions IDE</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1>Digital Twin Interactions IDE</h1>
    <div class="toolbar">
      <button id="generateBtn">Generate Interactive HTML</button>
      <input type="text" id="projectTitle" placeholder="Project Title">
    </div>
  </header>
  
  <main>
    <div class="left-panel">
      <div class="resource-section">
        <h2>SVG Resources</h2>
        <div class="upload-container">
          <form id="uploadSvgForm" enctype="multipart/form-data">
            <input type="file" name="file" id="svgFileInput" accept=".svg">
            <button type="submit">Upload SVG</button>
          </form>
        </div>
        <div class="resource-list" id="svgList">
          <% if (svgFiles && svgFiles.length > 0) { %>
            <% svgFiles.forEach(file => { %>
              <div class="resource-item svg-item" data-file="<%= file %>">
                <span class="file-name"><%= file %></span>
                <div class="resource-actions">
                  <button class="preview-btn" data-type="svg" data-file="<%= file %>">Preview</button>
                  <button class="add-btn" data-type="svg" data-file="<%= file %>">Add</button>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <p class="empty-list">No SVG files uploaded</p>
          <% } %>
        </div>
      </div>
      
      <div class="resource-section">
        <h2>JavaScript Resources</h2>
        <div class="upload-container">
          <form id="uploadJsForm" enctype="multipart/form-data">
            <input type="file" name="file" id="jsFileInput" accept=".js">
            <button type="submit">Upload JS</button>
          </form>
        </div>
        <div class="resource-list" id="jsList">
          <% if (scriptFiles && scriptFiles.length > 0) { %>
            <% scriptFiles.forEach(file => { %>
              <div class="resource-item js-item" data-file="<%= file %>">
                <span class="file-name"><%= file %></span>
                <div class="resource-actions">
                  <button class="preview-btn" data-type="script" data-file="<%= file %>">Preview</button>
                  <button class="add-btn" data-type="script" data-file="<%= file %>">Add</button>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <p class="empty-list">No JS files uploaded</p>
          <% } %>
        </div>
      </div>
    </div>
    
    <div class="center-panel">
      <div class="center-tabs">
        <button class="center-tab-btn active" data-tab="preview-tab">Preview</button>
        <button class="center-tab-btn" data-tab="code-tab">Code Editor</button>
      </div>
      
      <div id="preview-tab" class="center-tab-content active">
        <div class="canvas-container" id="canvasContainer">
          <div class="empty-state">
            <p>Add SVG files from the left panel to see them here</p>
          </div>
        </div>
      </div>
      
      <div id="code-tab" class="center-tab-content">
        <div class="code-editor-container">
          <div class="editor-toolbar">
            <select id="editorFileSelector">
              <option value="">Select a file to edit</option>
            </select>
            <button id="saveEditorChanges" disabled>Save Changes</button>
          </div>
          <div id="codeEditor">
            <textarea id="codeEditorTextarea"></textarea>
          </div>
        </div>
      </div>
    </div>
    
    <div class="right-panel">
      <div class="panel-section">
        <h3>Selected Resources</h3>
        <div id="selectedSvg">No SVG selected</div>
        <div id="selectedScripts">No scripts selected</div>
      </div>
      
      <div class="panel-section">
        <h3>Element Properties</h3>
        <div id="elementProperties">
          <p>No element selected</p>
          <div class="property-group">
            <label>Element ID:</label>
            <input type="text" id="elementId" disabled>
          </div>
          <div class="property-group">
            <label>Element Type:</label>
            <input type="text" id="elementType" disabled>
          </div>
          
          <div class="property-group">
            <label>Metadata:</label>
            <div class="metadata-tabs">
              <button class="metadata-tab active" data-tab="simple">Simple</button>
              <button class="metadata-tab" data-tab="json">JSON</button>
            </div>
            
            <div id="simpleMetadataEditor" class="metadata-editor active">
              <div id="metadataContainer">
                <p class="no-metadata">No metadata found for this element.</p>
              </div>
              <button id="addMetadataBtn" class="btn-sm">Add Field</button>
            </div>
            
            <div id="jsonMetadataEditor" class="metadata-editor">
              <textarea id="jsonMetadataTextarea" rows="8" placeholder="Enter JSON metadata..."></textarea>
              <div class="editor-controls">
                <button id="validateJsonBtn" class="btn-sm">Validate</button>
                <button id="applyJsonBtn" class="btn-sm">Apply</button>
                <button id="formatJsonBtn" class="btn-sm">Format</button>
              </div>
              <div id="jsonError" class="error-message"></div>
            </div>
          </div>
          
          <div class="property-group">
            <label>Script Binding:</label>
            <div id="scriptBindingContainer">
              <select id="scriptSelect">
                <option value="">Select script...</option>
              </select>
              <select id="eventSelect">
                <option value="click">click</option>
                <option value="mouseenter">mouseenter</option>
                <option value="mouseleave">mouseleave</option>
                <option value="mousemove">mousemove</option>
                <option value="dblclick">dblclick</option>
              </select>
              <button id="bindScriptBtn" class="btn-sm">Bind</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <div id="resultModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Interactive HTML Generated</h2>
      <p>Your interactive HTML file has been successfully generated!</p>
      <div class="modal-actions">
        <a href="#" id="downloadLink" class="download-btn" target="_blank">Download HTML</a>
        <button id="previewHtmlBtn" class="preview-btn">Preview</button>
      </div>
    </div>
  </div>
  
  <div id="previewModal" class="modal">
    <div class="modal-content preview-modal-content">
      <span class="close">&times;</span>
      <h2>Resource Preview</h2>
      <div id="previewContent"></div>
    </div>
  </div>
  
  <div id="metadataModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Add Metadata Field</h2>
      <div class="modal-form">
        <div class="form-field">
          <label for="metadataKey">Key:</label>
          <input type="text" id="metadataKey" placeholder="Enter metadata key">
        </div>
        <div class="form-field">
          <label for="metadataValue">Value:</label>
          <input type="text" id="metadataValue" placeholder="Enter metadata value">
        </div>
        <div class="modal-actions">
          <button id="addMetadataFieldBtn" class="add-btn">Add Field</button>
        </div>
      </div>
    </div>
  </div>
  
  <script src="/js/app.js"></script>
</body>
</html>
